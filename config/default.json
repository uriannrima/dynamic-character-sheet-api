{
  "host": "localhost",
  "port": 5000,
  "public": "../public/",
  "paginate": false,
  "mongodb": "mongodb://DB_USER:DB_PASSWORD@DB_HOST:DB_PORT/DB_NAME",
  "fallback": "mongodb://localhost/web-dcs",
  "authentication": {
    "secret": "",
    "strategies": [
      "jwt",
      "local"
    ],
    "path": "/authentication",
    "service": "users",
    "jwt": {
      "header": {
        "typ": "access"
      },
      "audience": "https://yourdomain.com",
      "subject": "anonymous",
      "issuer": "feathers",
      "algorithm": "HS256",
      "expiresIn": "1d"
    },
    "local": {
      "entity": "user",
      "usernameField": "email",
      "passwordField": "password"
    }
  }
}