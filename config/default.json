  // To enable authentication with cookies.
  "cookie": {
    "enabled": true, // whether the cookie should be enabled
    "name": "web-dcs-jwt", // the cookie name
    "httpOnly": true, // whether the cookie should not be available to client side JavaScript
    "secure": false // whether cookies should only be available over HTTPS
  }
